<Window x:Class="OCRTrainingImageGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OCRTrainingImageGenerator" xmlns:controls="clr-namespace:OCRTrainingImageGenerator.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Settings Editor">
                <controls:OCRSettingsEditor/>
            </TabItem>
            <TabItem Header="Batch Generator">
                <controls:BatchGenerator/>
            </TabItem>
            <TabItem Header="String Generator">
                <controls:StringGenerator/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
